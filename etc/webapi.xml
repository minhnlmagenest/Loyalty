<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Managing mine Cart Loyalty Point -->
    <route url="/V1/carts/mine/loyalty" method="GET">
        <service class="TieuMinh\Loyalty\Quote\Api\LoyaltyPointInterface" method="get"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/carts/mine/loyalty/:point" method="PUT">
        <service class="TieuMinh\Loyalty\Quote\Api\LoyaltyPointInterface" method="set"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/carts/mine/loyalty" method="DELETE">
        <service class="TieuMinh\Loyalty\Quote\Api\LoyaltyPointInterface" method="remove"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
